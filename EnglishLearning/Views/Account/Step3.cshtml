@{
    ViewData["Title"] = "Step 3 - Chọn mục đích học";
    Layout = "~/Views/Shared/_StepLayout.cshtml";
}
<!-- Tham chiếu CSS -->
<link href="~/css/step.css" rel="stylesheet" />
<div class="step-container">
    <div class="progress-container mb-4" style="height: 25px;">
        <div class="progress" style="height: 25px;">
            <div id="stepProgressBar"
                 class="progress-bar progress-bar-striped progress-bar-animated bg-success"
                 role="progressbar"
                 style="width: 100%">
               
            </div>
        </div>
    </div>
    <div class="step-card">
        <h2 class="step-title"><i class="bi bi-book-fill"></i> Bước 3: Chọn mục đích học</h2>
        @if (!string.IsNullOrEmpty(ViewBag.Error))
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }
        <form id="step3Form" asp-controller="Account" asp-action="Step3" method="post">
            <div class="option-grid" id="purposeOptions">
                @foreach (var purpose in ViewBag.Purposes as List<string>)
                {
                    <div class="option-item" data-value="@purpose">
                        <span class="option-label">@purpose</span>
                    </div>
                }
            </div>
            <button type="submit" class="btn btn-next" id="nextButton" disabled>Tiếp tục <i class="bi bi-arrow-right-circle-fill"></i></button>
        </form>
    </div>
</div>


<script>
    document.addEventListener('DOMContentLoaded', function () {
        const optionsContainer = document.getElementById('purposeOptions');
        const form = document.getElementById('step3Form');
        const nextButton = document.getElementById('nextButton');
        const progressBar = document.getElementById('stepProgressBar');

        if (progressBar) {
            progressBar.style.width = '100%';

        }

        let hiddenInput = document.getElementById('selectedPurpose');
        if (!hiddenInput) {
            hiddenInput = document.createElement('input');
            hiddenInput.type = 'hidden';
            hiddenInput.id = 'selectedPurpose';
            hiddenInput.name = 'purpose';
            form.appendChild(hiddenInput);
        }

        // CLICK
        optionsContainer.addEventListener('click', function (e) {
            const item = e.target.closest('.option-item');
            if (!item) return;
            e.preventDefault(); // <- Ngăn form submit
            console.log("Bạn chọn:", item.dataset.value);

            optionsContainer.querySelectorAll('.option-item')
                .forEach(i => i.classList.remove('selected'));

            item.classList.add('selected');
            hiddenInput.value = item.dataset.value || '';
            nextButton.disabled = false;
        });

        // SUBMIT
        form.addEventListener('submit', function (e) {
            if (!optionsContainer.querySelector('.option-item.selected')) {
                e.preventDefault();
                alert('Vui lòng chọn trình độ!');
                return;
            }
            nextButton.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Đang xử lý...';
        });
    });
</script>

<style>

    .step-card {
        background: rgba(255, 255, 255, 0.9);
        border-radius: 15px;
        padding: 30px;
        width: 100%;
        max-width: 650px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }


    .option-grid {
        display: flex;
        flex-wrap: wrap; /* Cho phép xuống dòng khi cần */
        gap: 15px; /* Khoảng cách giữa các ô */
        margin-bottom: 20px;
    }

    .option-item {
        display: flex;
        align-items: center;
        padding: 10px 15px;
        border: 2px solid #ddd;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

</style>