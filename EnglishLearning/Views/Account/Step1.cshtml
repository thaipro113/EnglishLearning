@{
    ViewData["Title"] = "Step 1 - Chọn trình độ";
    Layout = "~/Views/Shared/_StepLayout.cshtml";
}
<!-- Tham chiếu CSS -->
<link href="~/css/step.css" rel="stylesheet" />
<div class="step-container">
    <div class="progress-container mb-4" style="height: 25px;">
        <div class="progress" style="height: 25px;">
            <div id="stepProgressBar"
                 class="progress-bar progress-bar-striped progress-bar-animated bg-success"
                 role="progressbar"
                 style="width: 33.33%">
                
            </div>
        </div>
    </div>
    <div class="step-card">
        <h2 class="step-title"><i class="bi bi-bar-chart-fill"></i> Bước 1: Chọn trình độ</h2>
        @if (!string.IsNullOrEmpty(ViewBag.Error))
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }
        <form id="step1Form" asp-controller="Account" asp-action="Step1" method="post">
            <div class="option-grid" id="levelOptions">
                @foreach (var level in ViewBag.Levels as Dictionary<string, string>)
                {
                    // Tách chuỗi tiếng Việt tại dấu "("
                    string[] parts = level.Value.Split(new char[] { '(' }, 2);
                    string mainText = parts[0].Trim(); // "Mới bắt đầu"
                    string subText = "(" + parts[1].Trim(); // "(Tôi không biết gì...)"

                    <div class="option-item" data-value="@level.Key" role="button" tabindex="0" type="button">
                        <p class="option-main-label">@mainText</p>
                        <small class="option-sub-label">@subText</small>
                    </div>

                }
            </div>
            <button type="submit" class="btn btn-next" id="nextButton" disabled>Tiếp tục <i class="bi bi-arrow-right-circle-fill"></i></button>
        </form>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const optionsContainer = document.getElementById('levelOptions');
        const form = document.getElementById('step1Form');
        const nextButton = document.getElementById('nextButton');
        const progressBar = document.getElementById('stepProgressBar');

        if (progressBar) {
            progressBar.style.width = '33.33%';
            
        }

        let hiddenInput = document.getElementById('selectedLevel');
        if (!hiddenInput) {
            hiddenInput = document.createElement('input');
            hiddenInput.type = 'hidden';
            hiddenInput.id = 'selectedLevel';
            hiddenInput.name = 'level';
            form.appendChild(hiddenInput);
        }

        // CLICK
        optionsContainer.addEventListener('click', function (e) {
            const item = e.target.closest('.option-item');
            if (!item) return;
            e.preventDefault(); // <- Ngăn form submit
            console.log("Bạn chọn:", item.dataset.value);

            optionsContainer.querySelectorAll('.option-item')
                .forEach(i => i.classList.remove('selected'));

            item.classList.add('selected');
            hiddenInput.value = item.dataset.value || '';
            nextButton.disabled = false;
        });

        // SUBMIT
        form.addEventListener('submit', function (e) {
            if (!optionsContainer.querySelector('.option-item.selected')) {
                e.preventDefault();
                alert('Vui lòng chọn trình độ!');
                return;
            }
            nextButton.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Đang xử lý...';
        });
    });
</script>


