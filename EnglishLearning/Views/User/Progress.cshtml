@model dynamic
@{
    ViewData["Title"] = "Tiến độ học tập";
    Layout = "~/Views/Shared/TopFoot.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="card shadow-lg border-0 animate__animated animate__fadeIn">
        <div class="card-header bg-gradient-primary text-white d-flex justify-content-between align-items-center">
            <h2 class="mb-0"><i class="bi bi-graph-up me-2"></i>Tiến độ học tập của bạn</h2>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                @if (ViewBag.UserProgress != null && ((IEnumerable<object>)ViewBag.UserProgress).Count() > 0)
                {
                    <table class="table table-hover table-striped align-middle">
                        <thead class="bg-dark text-white">
                            <tr>
                                <th scope="col">Khóa học</th>
                                <th scope="col">Số bài học hoàn thành</th>
                                <th scope="col">Điểm trung bình</th>
                                <th scope="col">Ngày hoàn thành gần nhất</th>
                                <th scope="col">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var progress in ViewBag.UserProgress)
                            {
                                <tr class="animate__animated animate__fadeInUp">
                                    <td><span class="badge bg-gradient-info text-dark">@progress.CourseName</span></td>
                                    <td style="text-align:center;">@progress.TotalLessons</td>
                                    <td style="text-align:center;">
                                        @((progress.AverageScore / 10).ToString("F2"))/10
                                    </td>
                                    <td style="text-align:center;">@progress.LastCompleted?.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <a href="@Url.Action("ProgressDetail", "User", new { courseId = progress.CourseId })" class="btn btn-light btn-sm rounded-pill animate__animated animate__pulse animate__infinite"><i class="bi bi-eye me-2"></i>Xem chi tiết</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-center text-muted p-4 animate__animated animate__fadeIn">Bạn chưa hoàn thành bất kỳ bài học nào.</p>
                }
            </div>
        </div>
    </div>
</div>
<style>
    
    body {
        background: linear-gradient(135deg, #e0e7ff, #ffffff);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .card {
        border-radius: 15px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

    .bg-gradient-primary {
        background: linear-gradient(45deg, #007bff, #00d4ff);
    }

    .bg-gradient-info {
        background: linear-gradient(45deg, #17a2b8, #3df1ff);
    }

    .card-header {
        padding: 1.5rem;
        border-bottom: 2px solid rgba(255, 255, 255, 0.2);
    }

    .table {
        margin-bottom: 0;
        background-color: #fff;
    }

        .table th, .table td {
            padding: 1.2rem;
            vertical-align: middle;
            transition: background-color 0.3s ease;
        }

    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.1);
        cursor: pointer;
    }

    .badge {
        font-size: 0.9rem;
        padding: 0.6em 1.2em;
        border-radius: 20px;
        transition: transform 0.2s ease;
    }

        .badge:hover {
            transform: scale(1.1);
        }

    .btn-light {
        background-color: #fff;
        color: #007bff;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-light:hover {
            background-color: #e0e7ff;
            transform: scale(1.05);
        }

  

</style>
