@model dynamic
@{
    ViewData["Title"] = "Chi tiết tiến độ";
    Layout = "~/Views/Shared/TopFoot.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="card shadow-lg border-0 animate__animated animate__fadeIn">
        <div class="card-header bg-gradient-primary text-white d-flex justify-content-between align-items-center">
            <h2 class="mb-0"><i class="bi bi-list-task me-2"></i>Chi tiết tiến độ - @ViewBag.CourseName</h2>
            <a asp-action="Progress" class="btn btn-light btn-sm rounded-pill"><i class="bi bi-arrow-left me-2"></i>Quay lại</a>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                @if (ViewBag.ProgressDetails != null && ((IEnumerable<object>)ViewBag.ProgressDetails).Count() > 0)
                {
                    <table class="table table-hover table-striped align-middle">
                        <thead class="bg-dark text-white">
                            <tr>
                                <th scope="col">Bài học</th>
                                <th scope="col">Điểm số</th>
                                <th scope="col">Ngày hoàn thành</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var detail in ViewBag.ProgressDetails)
                            {
                                <tr class="animate__animated animate__fadeInUp">
                                    <td><span class="badge bg-gradient-info text-dark">@detail.LessonName</span></td>
                                    <td>@detail.Score/10</td>
                                    <td>@detail.CompletedAt?.ToString("dd/MM/yyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-center text-muted p-4 animate__animated animate__fadeIn">Không có dữ liệu chi tiết cho khóa học này.</p>
                }
            </div>
        </div>
    </div>
</div>

    <style>
        body {
            background: linear-gradient(135deg, #e0e7ff, #ffffff);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .card {
            border-radius: 15px;
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }
        .bg-gradient-primary {
            background: linear-gradient(45deg, #007bff, #00d4ff);
        }
        .bg-gradient-info {
            background: linear-gradient(45deg, #17a2b8, #3df1ff);
        }
        .bg-gradient-success {
            background: linear-gradient(45deg, #28a745, #7cff8e);
        }
        .card-header {
            padding: 1.5rem;
            border-bottom: 2px solid rgba(255, 255, 255, 0.2);
        }
        .table {
            margin-bottom: 0;
            background-color: #fff;
        }
        .table th, .table td {
            padding: 1.2rem;
            vertical-align: middle;
            transition: background-color 0.3s ease;
        }
        .table-hover tbody tr:hover {
            background-color: rgba(0, 123, 255, 0.1);
            cursor: pointer;
        }
        .badge {
            font-size: 0.9rem;
            padding: 0.6em 1.2em;
            border-radius: 20px;
            transition: transform 0.2s ease;
        }
        .badge:hover {
            transform: scale(1.1);
        }
        .progress {
            border-radius: 15px;
            overflow: hidden;
            background-color: #e9ecef;
        }
        .btn-light {
            background-color: #fff;
            color: #007bff;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }
        .btn-light:hover {
            background-color: #e0e7ff;
            transform: scale(1.05);
        }
       
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet">
