@model EnglishLearning.Models.User
@{
    Layout = "~/Views/Shared/TopFoot.cshtml";
}
<div class="profile-container">
    <div class="profile-card bg-gradient p-5 rounded-lg shadow-lg">
        <div class="text-center mb-4">
            <img src="~/uploads/@Model.ImageUrl" alt="Avatar" class="rounded-circle profile-img" style="width: 150px; height: 150px; object-fit: cover; border: 5px solid #fff;">
        </div>
        <div class="text-center mb-4 animate__animated animate__zoomIn">
            <h3 class="text-white" style="text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7); font-size: 2rem;">@Model.FullName</h3>
            <p class="text-light" style="text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7); font-size: 1.2rem;">@Model.Username</p>
        </div>
        <div class="info-grid animate__animated animate__fadeInUp">
            <div class="info-item">
                <span class="info-label">Họ và tên:</span>
                <span class="info-value">@Model.FullName</span>
            </div>
            <div class="info-item">
                <span class="info-label">Email:</span>
                <span class="info-value">@Model.Email</span>

            </div>
            <div class="info-item">
                <span class="info-label">Trình độ:</span>
                <span class="info-value">@Model.Level</span>
            </div>
            <div class="info-item">
                <span class="info-label">Mục đích học:</span>
                <span class="info-value">@Model.Purpose</span>
            </div>
            <div class="info-item">
                <span class="info-label">Đối tượng học:</span>
                <span class="info-value">@Model.Occupation</span>
            </div>
            <div class="info-item">
                <span class="info-label">Số điện thoại:</span>
                <span class="info-value">@Model.PhoneNumber</span>
            </div>
        </div>
        <div class="text-center mt-4 animate__animated animate__fadeInUp" style="animation-delay: 0.2s;">
            <a asp-action="EditProfile" class="btn btn-light btn-lg btn-custom">Chỉnh sửa hồ sơ</a>
        </div>
    </div>
</div>

<style>
    .profile-container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: linear-gradient(135deg, #6b48ff, #00d4ff);
        padding: 20px;
    }

    .profile-card {
        background: rgba(255, 255, 255, 0.5); /* Tăng độ mờ lên 0.5 để rõ hơn */
        /* Loại bỏ backdrop-filter để tránh mờ quá mức */
        border-radius: 20px;
        max-width: 500px; /* Tăng kích thước khung từ 400px lên 500px */
        width: 100%;
        padding: 30px; /* Tăng padding từ 20px lên 30px */
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 2px solid rgba(255, 255, 255, 0.3); /* Tăng viền để nổi bật */
    }

        .profile-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
        }

    .profile-img {
        transition: transform 0.3s ease;
    }

        .profile-img:hover {
            transform: rotate(5deg) scale(1.1);
        }

    .info-grid {
        display: grid;
        gap: 20px; /* Tăng khoảng cách giữa các mục */
        margin-bottom: 25px;
    }

    .info-item {
        background: rgba(255, 255, 255, 0.6); /* Tăng độ mờ lên 0.6 */
        padding: 15px; /* Tăng padding từ 12px lên 15px */
        border-radius: 12px; /* Tăng bo góc */
        display: flex;
        justify-content: space-between;
        border: 2px solid rgba(255, 255, 255, 0.4); /* Tăng viền */
    }

    .info-label {
        color: black;
        font-weight: 700; /* Tăng độ đậm */
        font-size: 1.1rem; /* Tăng kích thước chữ */
     
    }

    .info-value {
        color: black; /* Thay đổi sang trắng hoàn toàn */
        font-weight: 500; /* Tăng độ đậm */
        font-size: 1.1rem; /* Tăng kích thước chữ */
      
    }

    .btn-custom {
        background: #fff;
        color: #6b48ff;
        border: none;
        padding: 12px 35px; /* Tăng padding */
        font-size: 1.1rem; /* Tăng kích thước chữ */
        border-radius: 25px;
        transition: all 0.3s ease;
    }

        .btn-custom:hover {
            background: #6b48ff;
            color: #fff;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(107, 72, 255, 0.4);
        }

    .animate__animated {
        animation-duration: 0.6s;
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />