@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Lịch sử dịch";
    Layout = "~/Views/Shared/TopFoot.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="card shadow-lg border-0 animate__animated animate__fadeIn">
        <div class="card-header bg-gradient-primary text-white d-flex justify-content-between align-items-center">
            <h2 class="mb-0"><i class="bi bi-clock-history me-2"></i>Lịch sử dịch</h2>
            <div>
                <button class="btn btn-outline-light btn-sm me-2 animate__animated animate__pulse animate__infinite" onclick="clearHistory()"><i class="bi bi-trash me-2"></i>Xóa toàn bộ</button>
                <a asp-action="SelectLevel" asp-controller="Translation" class="btn btn-light btn-sm rounded-pill"><i class="bi bi-arrow-left me-2"></i>Quay lại</a>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                @if (Model != null && Model.Any())
                {
                    <table class="table table-hover table-striped align-middle">
                        <thead class="bg-dark text-white">
                            <tr>
                                <th scope="col">Thời gian</th>
                                <th scope="col">Cấp độ</th>
                                <th scope="col">Chủ đề</th>
                                <th scope="col">Số câu hoàn thành</th>
                                <th scope="col">Đoạn văn</th>
                                <th scope="col">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var paragraph in Model)
                            {
                                <tr class="animate__animated animate__fadeInUp">
                                    <td>@paragraph.Timestamp.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                                    <td><span class="badge bg-gradient-info text-dark">@paragraph.Level</span></td>
                                    <td><span class="badge bg-gradient-info text-dark">@paragraph.Topic</span></td>
                                    <td>@paragraph.SentenceCount/10</td>
                                    <td>@(paragraph.ParagraphText.Length > 100 ? paragraph.ParagraphText.Substring(0, 100) + "..." : paragraph.ParagraphText)</td>
                                    <td>
                                        <a asp-action="ParagraphHistory" asp-controller="Translation" asp-route-paragraphId="@paragraph.Id" style="margin-left:7px" class="btn btn-light btn-sm rounded-pill "><i class="bi bi-eye me-2"></i>Xem chi tiết</a>
                                        @if (paragraph.SentenceCount < 10)
                                        {
                                            <a asp-action="ContinuePractice" asp-controller="Translation" asp-route-paragraphId="@paragraph.Id" class="btn btn-outline-warning btn-sm rounded-pill ms-2" style="margin:5px 0px"><i class="bi bi-play-circle me-2"></i>Làm tiếp</a>
                                        }
                                        <button class="btn btn-outline-danger btn-sm rounded-pill ms-2 " onclick="deleteParagraph(@paragraph.Id)"><i class="bi bi-trash me-2"></i>Xóa</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-center text-muted p-4 animate__animated animate__fadeIn">Bạn chưa thực hiện bài dịch nào.</p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        async function clearHistory() {
            if (!confirm("Bạn có chắc muốn xóa toàn bộ lịch sử?")) return;
            try {
                const res = await fetch("/Translation/ClearHistory", { method: "POST" });
                const data = await res.json();
                alert(data.message || data.error || "Đã xóa lịch sử thành công!");
                location.reload();
            } catch (error) {
                alert("Có lỗi xảy ra khi xóa lịch sử!");
            }
        }

        async function deleteParagraph(paragraphId) {
            if (!confirm("Bạn có chắc muốn xóa đoạn văn này?")) return;
            try {
                const res = await fetch(`/Translation/DeleteParagraph/${paragraphId}`, {
                    method: "POST",
                    headers: { "Content-Type": "application/json" }
                });
                const data = await res.json();
                location.reload();
            } catch (error) {
                alert("Có lỗi xảy ra khi xóa đoạn văn!");
            }
        }
    </script>
}

