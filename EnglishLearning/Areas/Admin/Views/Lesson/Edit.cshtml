@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        let quizIndex = @(Model.LessonType == "TOEIC" ? 0 : Model.Quizzes.Count - 1);

        function addQuiz() {
            quizIndex++;
            const container = document.getElementById("quiz-list");
            const html = `
                <div class="quiz-item" data-index="${quizIndex}">
                    <input type="hidden" name="Quizzes[${quizIndex}].QuizId" value="0" />
                    <input type="hidden" name="Quizzes[${quizIndex}].LessonId" value="@Model.LessonId" />
                    <input type="hidden" name="Quizzes[${quizIndex}].IsDeleted" value="false" />
                    <div class="row g-2">
                        <div class="col-12">
                            <label class="form-label fw-bold text-success">Câu ${quizIndex + 1}</label>
                            <input name="Quizzes[${quizIndex}].Question" class="form-control" required />
                        </div>
                        <div class="col-md-6"><label>A</label><input name="Quizzes[${quizIndex}].OptionA" class="form-control" required /></div>
                        <div class="col-md-6"><label>B</label><input name="Quizzes[${quizIndex}].OptionB" class="form-control" required /></div>
                        <div class="col-md-6"><label>C</label><input name="Quizzes[${quizIndex}].OptionC" class="form-control" required /></div>
                        <div class="col-md-6"><label>D</label><input name="Quizzes[${quizIndex}].OptionD" class="form-control" required /></div>
                        <div class="col-12">
                            <label class="text-danger">Đáp án đúng</label>
                            <input name="Quizzes[${quizIndex}].CorrectAnswer" class="form-control" maxlength="1" style="text-transform:uppercase" required />
                        </div>
                    </div>
                    <button type="button" class="remove-btn" onclick="removeQuiz(this)">
                        <i class="fas fa-times"></i>
                    </button>
                </div>`;
            container.insertAdjacentHTML("beforeend", html);
        }

        function removeQuiz(btn) {
            const item = btn.closest(".quiz-item");
            const del = item.querySelector("input[name*='IsDeleted']");
            if (del) del.value = "true";
            item.style.display = "none";
        }
    </script>
}