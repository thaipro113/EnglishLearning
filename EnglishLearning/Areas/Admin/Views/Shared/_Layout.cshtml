    <script> 
        @using System.Text.Json
        $(document).ready(function() {
            // Lấy dữ liệu từ ViewBag
            var progressCount = @ViewBag.ProgressCount || 0;
            var userCount = @ViewBag.UserCount || 0;
            var lessonCount = @ViewBag.LessonCount || 0;
            var courseCount = @ViewBag.CourseCount || 0;
            var progressPercentage = @ViewBag.ProgressPercentage || 0;
          
            const lessonData = @Html.Raw(JsonSerializer.Serialize(ViewBag.LessonData));

            // Cập nhật số liệu tĩnh
            $('#progressCount').text(progressCount);
            $('#userCount').text(userCount);
            $('#lessonCount').text(lessonCount);
            $('#courseCount').text(courseCount);
            $('#progressPercentage').text(progressPercentage + '%');
            $('#totalUsers').text(userCount);

            // Biểu đồ cột (Bar Chart)
            var ctxBar = document.getElementById('bar_chart').getContext('2d');
            new Chart(ctxBar, {
                type: 'bar',
                data: {
                    labels: ['Tiến trình', 'Người dùng', 'Bài học', 'Khóa học'],
                    datasets: [{
                        label: 'Số lượng',
                        data: [progressCount, userCount, lessonCount, courseCount],
                        backgroundColor: [
                            'rgba(54, 162, 235, 0.6)',  // Tiến trình
                            'rgba(75, 192, 192, 0.6)',  // Người dùng
                            'rgba(255, 206, 86, 0.6)',  // Bài học
                            'rgba(153, 102, 255, 0.6)'  // Khóa học
                        ],
                        borderColor: [
                            'rgba(54, 162, 235, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(153, 102, 255, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            min: 0
                        }
                    },
                    tooltips: {
                        callbacks: {
                            label: function(tooltipItem, data) {
                                var label = data.labels[tooltipItem.index] || '';
                                var value = data.datasets[0].data[tooltipItem.index] || 0;
                                return label + ': ' + value;
                            }
                        }
                    }
                }
            });

            // Biểu đồ tròn (Doughnut Chart) - Số lượng bài học theo khóa học
            var ctxDoughnut = document.getElementById('doughnut_chart').getContext('2d');
            var doughnutLabels = lessonData.map(item => item.CourseName);
            var doughnutData = lessonData.map(item => item.LessonCount);

            new Chart(ctxDoughnut, {
                type: 'doughnut',
                data: {
                    labels: doughnutLabels.length > 0 ? doughnutLabels : ['No Data'],
                    datasets: [{
                        data: doughnutData.length > 0 ? doughnutData : [1], // Đảm bảo có dữ liệu, nếu không có thì dùng 1 để tránh lỗi
                        backgroundColor: [
                            'rgba(75, 192, 192, 0.6)',  // Màu 1
                            'rgba(255, 206, 86, 0.6)',  // Màu 2
                            'rgba(153, 102, 255, 0.6)', // Màu 3
                            'rgba(54, 162, 235, 0.6)',  // Màu 4
                            'rgba(255, 99, 132, 0.6)'   // Màu 5 (nếu có thêm khóa học)
                        ].slice(0, doughnutLabels.length), // Cắt màu theo số lượng khóa học
                        borderColor: [
                            'rgba(75, 192, 192, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 99, 132, 1)'
                        ].slice(0, doughnutLabels.length),
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    tooltips: {
                        callbacks: {
                            label: function(tooltipItem, data) {
                                var label = data.labels[tooltipItem.index] || '';
                                var value = data.datasets[0].data[tooltipItem.index] || 0;
                                return label + ': ' + value + ' bài học';
                            }
                        }
                    }
                }
            });
        });
    </script>
